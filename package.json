{
  "name": "mcp-server-rubygems",
  "version": "0.1.0",
  "description": " A Model Context Protocol server for fetching rubygems info via rubygems API.",
  "private": true,
  "type": "module",
  "bin": {
    "mcp-server-rubygems": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "postbuild": "node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  }
}
